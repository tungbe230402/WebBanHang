@model WebBanHangOnline.Models.CreateAccountViewModel
@{
    ViewBag.Title = "ProFile";
}
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">
<!-- Slider -->
<style>
    .news_section_container {
        margin-top: 180px;
    }

    .row-item-new {
        margin-bottom: 20px;
    }

    .title-news {
        font-size: 24px;
        border-bottom: 1px solid;
        padding: 15px 0;
        margin-bottom: 25px;
    }

    .img-box img {
        max-width: 100%;
        max-height: 100%;
    }
</style>
<div class="container news_section_container">
    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("PostProfile", "Account"))
            {
                @Html.ValidationSummary(false)
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col-md-12">
                        <h1 class="title-news">Thông tin cá nhân</h1>
                    </div>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Tài khoản</label>
                    <input type="text" class="form-control" name="UserName" value="@Model.UserName" readonly>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Full Name</label>
                    <input type="text" class="form-control" name="FullName" value="@Model.FullName">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Phone</label>
                    <input type="text" class="form-control" name="Phone" value="@Model.Phone">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Email</label>
                    <input type="text" class="form-control" name="Email" value="@Model.Email">
                </div>
                <div class="form-group">
                    <br />
                    <button type="submit" class="btn btn-success">Cập nhật</button>
                    <a href="/home" class="btn btn-danger">Quay lại</a>
                </div>
            }
        </div>
        @*<div class="col-md-12">

                @Html.Action("LichSuDonHang", "Review")
            </div>*@


    </div>
</div>